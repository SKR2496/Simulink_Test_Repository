pipeline {
    agent any

    triggers {
        // Poll SCM every 10 minutes
        pollSCM('H/10 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SKR2496/Simulink_Test_Repository.git'
            }
        }

        stage('Detect Changed Model') {
            steps {
                bat '''
                    echo Detecting changed .slx files...
                    git fetch --all
                    git diff --name-only HEAD~1 HEAD > changed_files.txt
                    findstr ".slx" changed_files.txt > changed_models.txt || echo NoModels > changed_models.txt
                    type changed_models.txt
                '''
            }
        }

        stage('Run MIL Tests') {
            when {
                expression {
                    // Run only if .slx models were found
                    def changed = readFile('changed_models.txt').trim()
                    return changed && changed != "NoModels"
                }
            }
            steps {
                bat """
                    echo Running MATLAB MIL tests on changed models...

                    runas /user:sasi.kakarla_methodi /savecred "C:\\Program Files\\MATLAB\\R2025a\\bin\\matlab.exe" -batch \"run('runMilTests.m')\"

                  """
                  
                
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
