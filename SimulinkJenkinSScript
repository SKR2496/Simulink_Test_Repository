pipeline {
    agent any

    triggers {
        // Poll SCM every 5 minutes
        pollSCM('H/5 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull latest code from GitHub
                git branch: 'main',
                    url: 'https://github.com/SKR2496/Simulink_Test_Repository.git'
            }
        }

        stage('Detect Changed Model') {
            steps {
                bat '''
                    echo Detecting changed .slx files...
                    git fetch --all
                    git diff --name-only HEAD~1 HEAD > changed_files.txt
                    findstr ".slx" changed_files.txt > changed_models.txt || echo No models changed > changed_models.txt
                '''
            }
        }

        stage('Run MIL Tests') {
            when {
                expression {
                    return fileExists('changed_models.txt') && 
                           readFile('changed_models.txt').trim() != "No models changed"
                }
            }
            steps {
                bat '''
                    echo Running MATLAB MIL tests...
                    "C:\\Program Files\\MATLAB\\R2023b\\bin\\matlab.exe" -batch "run('runMilTests.m')"
                '''
            }
        }
    }

    post {
        success {
            echo "MIL tests PASSED ✅"
        }
        failure {
            echo "MIL tests FAILED ❌"
        }
    }
}
